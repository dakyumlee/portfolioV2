{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "./gradlew build -x test"
  },
  "deploy": {
    "startCommand": "java -Dspring.profiles.active=prod -Dserver.port=$PORT -jar build/libs/portfolio-0.0.1-SNAPSHOT.jar",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
